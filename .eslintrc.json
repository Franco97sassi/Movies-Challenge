{
  "parser": "@typescript-eslint/parser", // Utiliza el analizador de TypeScript
  "extends": [
    "airbnb", // Configuración de Airbnb para JavaScript
    "airbnb/hooks", // Configuración de Airbnb para React hooks
    "prettier", // Configuración para Prettier
    "plugin:@typescript-eslint/recommended" // Reglas recomendadas de @typescript-eslint
  ],
  "plugins": [
    "@typescript-eslint", // Plugin para TypeScript
    "react" // Plugin para React
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Desactiva la regla de JSX en el alcance
    // Puedes agregar más reglas personalizadas aquí
  },
  "settings": {
    "react": {
      "version": "detect" // Detecta automáticamente la versión de React
    }
  }
}
